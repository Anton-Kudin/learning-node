<h1>Добавить курс</h1>

<form action="/add" method="POST">
<div class="input-field">
    <input id="title" name="title" type="text" class="validate" required>
    <label for="title">Казвание курса</label>
    <span class="helper-text" data-error="введите название"></span>
</div>

<div class="input-field">
    <input id="price" name="price" type="number" class="validate" min="1">
    <label for="price">Цена</label>
    <span class="helper-text" data-error="введите цену"></span>
</div>

<div class="input-field">
    <input id="id" name="url" type="text" class="validate" required>
    <label for="id">URL картинки</label>
    <span class="helper-text" data-error="URL картинки"></span>
</div>
<button class="btn btn-primary">Доавить курс</button>
</form>